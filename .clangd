---
CompileFlags:
  Add:
    - -std=c++20

    - -Iinclude      # Comum para headers públicos/interface
    - -Isrc          # Comum para headers internos/implementação
    - -Iexamples

    - -Wall          # Ativa a maioria dos avisos do compilador
    - -Wextra        # Ativa avisos adicionais
    - -Wpedantic     # Para avisos de conformidade mais rigorosos (opcional)
    - -Werror        # (Opcional) Trata todos os avisos como erros

Diagnostics:
  ClangTidy:
    Add: "*"

InlayHints:
  Enabled: true                
  ParameterNames: true          
  DeducedTypes: true            
  BlockEnd: true              

Index:
  Background: On 

